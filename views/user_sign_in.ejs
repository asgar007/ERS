<div class="d-flex justify-content-center p-4 p-md-0">
  <form
    class="rounded p-3 col-12 col-md-4 my-4 shadow-lg"
    method="POST"
    action="/create-session"
  >
    <h3 class="mb-2 text-center heading">Sign in</h3>
    <!-- Email input -->
    <div class="form-outline mb-3">
      <label class="form-label heading" for="email">Email address</label>
      <input type="email" id="email" name="email" class="form-control" />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-3">
      <label class="form-label heading" for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
      />
    </div>

    <div class="login-button">
      <!-- Login button -->
      <button
        type="submit"
        class="btn btn-primary btn-block fw-semibold"
      >
        LOGIN
      </button>
    </div>
    <div>
      <hr />
    </div>

    <!-- Link to redirect to signup page -->
    <div class="text-center">
      <p>If not a user? <a class="btn btn-primary btn-block" href="/sign-up">Register</a></p>
    </div>
  </form>
</div>
